# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
# Stop the editor from looking for .editorconfig files in the parent directories
root = true

[*]
# Configurable Prettier behaviors
# (change these if your Prettier config differs)
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80

# Non-configurable Prettier behaviors
charset = utf-8
insert_final_newline = true
# Issue trim_trailing_whitespace = false not working https://github.com/editorconfig/editorconfig-vscode/issues/153
# Caveat: Prettier wonâ€™t trim trailing whitespace inside template strings, but your editor might.
# trim_trailing_whitespace = true

[*.md]
indent_size = 4
